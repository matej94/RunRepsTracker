<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

    <Button
        android:id="@+id/PushUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AppTitleTv"
        android:text="PushUpButton"
        android:textAlignment="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/SitUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PushUpBtn"
        android:text="SitUpButton"
        android:textAlignment="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/RunBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SitUpBtn"
        android:text="RunButton"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/AppTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RunAndRepsTracker"
        android:textAlignment="center"
        android:textSize="@dimen/size_of_app_title"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
